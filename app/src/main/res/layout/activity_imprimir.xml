<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImprimirActivity">


    <LinearLayout
        android:id="@+id/Imprimir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FF00"
        android:backgroundTint="#009688"
        android:padding="10dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Impimir KVBE-Matricula"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/Resumen"
        android:layout_width="296dp"
        android:layout_height="24dp"
        android:layout_below="@+id/Imprimir"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="105dp"
        android:text="Resumen Matrícula"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/Alumno"
        android:layout_width="296dp"
        android:layout_height="24dp"
        android:layout_below="@+id/Resumen"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="105dp"
        android:text="Alumno"
        android:textSize="10dp" />


    <EditText
        android:id="@+id/Alumno_I"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Alumno"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/Escuela"
        android:layout_width="296dp"
        android:layout_height="24dp"
        android:layout_below="@+id/Alumno_I"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="105dp"
        android:text="Escuela"
        android:textSize="10dp" />
    <EditText
        android:id="@+id/Escuela_I"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Escuela"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/Carrera"
        android:layout_width="296dp"
        android:layout_height="24dp"
        android:layout_below="@+id/Escuela_I"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="105dp"
        android:text="Carrera"
        android:textSize="10dp" />
    <EditText
        android:id="@+id/Carrera_I"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Carrera"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/Gastos_Adicionales"
        android:layout_width="296dp"
        android:layout_height="24dp"
        android:layout_below="@+id/Carrera_I"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="105dp"
        android:text="Gastos Adicionales"
        android:textSize="10dp" />
    <EditText
        android:id="@+id/Gastos_Adicionales_I"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Gastos_Adicionales"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/M_Gastos_Adicionales"
        android:layout_width="296dp"
        android:layout_height="24dp"
        android:layout_below="@+id/Gastos_Adicionales_I"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="105dp"
        android:text="Montos Gastos Adicionales"
        android:textSize="10dp" />
    <EditText
        android:id="@+id/M_Gastos_Adicionales_I"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/M_Gastos_Adicionales"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/Cuotas"
        android:layout_width="296dp"
        android:layout_height="24dp"
        android:layout_below="@+id/M_Gastos_Adicionales_I"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="105dp"
        android:text="Números de Cuotas"
        android:textSize="10dp" />
    <EditText
        android:id="@+id/Cuotas_I"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Cuotas"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/Costo_Carrera"
        android:layout_width="296dp"
        android:layout_height="24dp"
        android:layout_below="@+id/Cuotas_I"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="105dp"
        android:text="Costo Carrera"
        android:textSize="10dp" />
    <EditText
        android:id="@+id/Costo_Carrera_I"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Costo_Carrera"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/Pension"
        android:layout_width="296dp"
        android:layout_height="24dp"
        android:layout_below="@+id/Costo_Carrera_I"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="105dp"
        android:text="Pension"
        android:textSize="10dp" />
    <EditText
        android:id="@+id/Pension_I"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pension"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/Gastos_Adicionales2"
        android:layout_width="296dp"
        android:layout_height="24dp"
        android:layout_below="@+id/Pension_I"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="105dp"
        android:text="Gastos_Adicionales"
        android:textSize="10dp" />
    <EditText
        android:id="@+id/Gastos_Adicionales2_I"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Gastos_Adicionales2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/Total"
        android:layout_width="296dp"
        android:layout_height="24dp"
        android:layout_below="@+id/Gastos_Adicionales2_I"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="105dp"
        android:text="Total Pagar"
        android:textSize="10dp" />
    <EditText
        android:id="@+id/Total_I"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Total"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="10dp" />



</RelativeLayout>